<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:padding="@dimen/large_margin">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/employee_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/cardview_margin"
                android:text="@string/employee_name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/employee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/employee_name_title"
                android:padding="@dimen/cardview_margin"
                android:text="..."
                android:textSize="@dimen/text_normal_size" />

            <TextView
                android:id="@+id/employee_phone_number_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/employee_name"
                android:layout_alignParentRight="true"
                android:padding="@dimen/cardview_margin"
                android:text="@string/debtor_phone_num"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/employee_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/employee_name"
                android:layout_toLeftOf="@id/employee_phone_number_title"
                android:padding="@dimen/cardview_margin"
                android:text="..."
                android:textSize="@dimen/text_normal_size" />

            <TextView
                android:id="@+id/date_of_employee_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/employee_phone_number"
                android:layout_alignParentRight="true"
                android:padding="@dimen/cardview_margin"
                android:text="@string/employee_date_employee"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_of_employee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/employee_phone_number"
                android:layout_toLeftOf="@id/date_of_employee_title"
                android:padding="@dimen/cardview_margin"
                android:text="..."
                android:textSize="@dimen/text_normal_size" />

            <TextView
                android:id="@+id/employee_salary_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_of_employee"
                android:layout_alignParentRight="true"
                android:padding="@dimen/cardview_margin"
                android:text="@string/employee_salary"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/employee_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_of_employee"
                android:layout_toLeftOf="@id/employee_salary_title"
                android:padding="@dimen/cardview_margin"
                android:text="..."
                android:textSize="@dimen/text_normal_size" />

            <TextView
                android:id="@+id/job_title_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/cardview_margin"
                android:text="@string/employee_job_title"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal_size"
                android:textStyle="bold"
            android:layout_below="@id/employee_salary"
                />

            <TextView
                android:id="@+id/job_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/employee_salary"
                android:layout_toLeftOf="@id/job_title_title"
                android:padding="@dimen/cardview_margin"
                android:text="..."
                android:textSize="@dimen/text_normal_size" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>