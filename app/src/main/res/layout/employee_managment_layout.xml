<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:padding="@dimen/large_margin"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/employee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نام"
                android:textSize="@dimen/text_normal_size"
                android:padding="@dimen/cardview_margin"
                android:layout_alignParentEnd="true"
                />
            <TextView
                android:id="@+id/employee_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="شماره تماس"
                android:textSize="@dimen/text_normal_size"
                android:padding="@dimen/cardview_margin"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/employee_name"
                />
            <TextView
                android:id="@+id/date_of_employee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تاریخ استخدام"
                android:textSize="@dimen/text_normal_size"
                android:padding="@dimen/cardview_margin"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/employee_phone_number"
                />

            <TextView
                android:id="@+id/employee_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حقوق پایه"
                android:textSize="@dimen/text_normal_size"
                android:padding="@dimen/cardview_margin"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/date_of_employee"
                />
            <TextView
                android:id="@+id/job_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سمت"
                android:textSize="@dimen/text_normal_size"
                android:padding="@dimen/cardview_margin"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/employee_salary"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>