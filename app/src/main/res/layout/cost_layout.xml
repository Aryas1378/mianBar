<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/large_margin"
        android:layout_margin="@dimen/small_margin"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <TextView
                android:id="@+id/cost_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="دلیل هزینه ...."
                android:layout_alignParentEnd="true"
                android:padding="@dimen/cardview_margin"

                android:textColor="@color/black"
                android:textSize="@dimen/text_normal_size"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/cost_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="مقذار هزینه ..."
                android:layout_alignParentEnd="true"
                android:padding="@dimen/cardview_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal_size"
                android:layout_below="@id/cost_reason"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/cost_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cost_amount"
                android:layout_alignParentEnd="false"
                android:text="5/23/2021"
                android:textSize="@dimen/text_normal_size"
                android:textColor="@color/black"
                android:padding="@dimen/cardview_margin"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>